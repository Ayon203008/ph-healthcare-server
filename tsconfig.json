{
  "compilerOptions": {
    "rootDir": "./", // * Make the root director to (./) only
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src","prisma.config.ts"], // * include "src" and "prisma.config.ts"
  "exclude": ["node_modules","dist"]
}


